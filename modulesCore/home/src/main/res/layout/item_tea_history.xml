<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_message_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tea_history_item" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_tea_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="陆羽问泉"
        android:textColor="@color/dark_green"
        android:textSize="18sp"
        android:fontFamily="@font/title_font"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/cv_message_icon"
        app:layout_constraintTop_toTopOf="@+id/cv_message_icon" />

    <TextView
        android:id="@+id/tv_tea_history_detail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="茶圣陆羽为寻煮茶真味，踏遍三十州辨天下水质，著成《茶经》时笑叹：“好水如镜，照见茶魂。”"
        android:textColor="@color/black"
        android:fontFamily="@font/content_font"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tv_tea_history_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_tea_history_title" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_enter"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>