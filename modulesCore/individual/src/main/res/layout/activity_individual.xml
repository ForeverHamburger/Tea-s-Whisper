<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.IndividualActivity"
    android:background="@color/emerald_green">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 沉浸式 -->
            <!-- app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed" -->

            <ImageView
                android:id="@+id/imageView"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dog"
                android:foreground="@drawable/shape_white"/>

            <ImageView
                android:id="@+id/foreground_imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:clipToOutline="true"
                android:outlineProvider="bounds"
                app:layout_collapseMode="parallax">
            </ImageView>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="?attr/actionBarSize">

                <ImageView
                    android:id="@+id/man"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dog" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeStepGranularity="2sp"
                    android:text="我是奶龙，我才是奶龙"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/img_set"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_set"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp" />


            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:id="@+id/bottom_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="bottom"
                app:layout_collapseMode="none">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="愿相知" />

                    <!-- 头像与昵称 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- 头像（带点击放大功能） -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/default_avatar"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/md_primary"/>

                        <!-- 昵称与性别 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/md_on_surface"
                                android:text="用户昵称"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_gender"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:visibility="gone"
                                    tools:src="@drawable/ic_gender_male"/>

                                <TextView
                                    android:id="@+id/tv_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/md_primary"
                                    android:text="Lv.12"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 关注按钮 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            app:icon="@drawable/ic_add"
                            app:iconGravity="start"
                            app:strokeColor="@color/md_primary"
                            app:strokeWidth="1dp"/>

                    </LinearLayout>

                    <!-- 数据统计 -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/md_on_surface_variant"
                        android:text="粉丝 1.2k | 关注 365 | 获赞 5.6w | 收藏 234"/>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <!-- 功能入口 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/md_surface"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 动态入口 -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.TextButton"
                        android:id="@+id/btn_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的动态"
                        app:icon="@drawable/ic_post"
                        app:iconGravity="start"
                        app:iconTint="@color/md_primary"/>

                    <!-- 收藏入口 -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.TextButton"
                        android:id="@+id/btn_collections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        app:icon="@drawable/ic_collection"
                        app:iconGravity="start"
                        app:iconTint="@color/md_primary"/>

                    <!-- 赞过入口 -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.TextButton"
                        android:id="@+id/btn_likes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的点赞"
                        app:icon="@drawable/ic_like"
                        app:iconGravity="start"
                        app:iconTint="@color/md_primary"/>

                    <!-- 会员入口 -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.TextButton"
                        android:id="@+id/btn_vip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开通会员"
                        app:icon="@drawable/ic_vip"
                        app:iconGravity="start"
                        app:iconTint="@color/md_primary"/>

                    <!-- 设置入口 -->
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.TextButton"
                        android:id="@+id/btn_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="系统设置"
                        app:icon="@drawable/ic_settings"
                        app:iconGravity="start"
                        app:iconTint="@color/md_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- 底部导航 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
