<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_chat_received"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_received"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/dog" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/cv_received"
        app:layout_constraintBottom_toTopOf="@+id/tv_received"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxWidth="300dp"
        android:background="@drawable/chat_received"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/cv_received"
        app:layout_constraintStart_toEndOf="@+id/cv_received"
        app:layout_constraintTop_toBottomOf="@+id/tv_received_time" />


</androidx.constraintlayout.widget.ConstraintLayout>